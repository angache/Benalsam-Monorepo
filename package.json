{
  "name": "benalsam-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel --stream",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "type-check": "lerna run type-check --stream",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,jsx,json}\"",
    "publish": "lerna publish",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:flush": "pm2 flush",
    "dev:pm2": "pnpm run pm2:start && pnpm run pm2:logs",
    "pm2:start:prod": "pm2 start ecosystem.production.config.js",
    "pm2:stop:prod": "pm2 stop ecosystem.production.config.js",
    "pm2:restart:prod": "pm2 restart ecosystem.production.config.js",
    "pm2:reload:prod": "pm2 reload ecosystem.production.config.js",
    "pm2:delete:prod": "pm2 delete ecosystem.production.config.js",
    "pm2:logs:prod": "pm2 logs",
    "pm2:status:prod": "pm2 status",
    "pm2:monit:prod": "pm2 monit",
    "deploy:prod": "pm2 deploy production",
    "vps:setup": "pnpm install && pnpm run build && pm2 start ecosystem.production.config.js",
    "vps:deploy": "./scripts/deploy-vps.sh",
    "monorepo:clean": "lerna clean && pnpm store prune",
    "monorepo:bootstrap": "lerna bootstrap",
    "monorepo:build:all": "lerna run build --stream",
    "monorepo:dev:all": "lerna run dev --parallel --stream",
    "monorepo:test:all": "lerna run test --stream",
    "monorepo:lint:all": "lerna run lint --stream",
    "monorepo:type-check:all": "lerna run type-check --stream",
    "monorepo:changed": "lerna changed",
    "monorepo:diff": "lerna diff",
    "monorepo:version": "lerna version",
    "monorepo:publish": "lerna publish"
  },
  "devDependencies": {
    "lerna": "^8.2.3",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
} 